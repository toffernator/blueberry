            <span class="badge bg-primary rounded-pill tag">Docker</span>
            <span class="badge bg-primary rounded-pill tag">CSS</span>
        </div>
    </div>
    <div class="searchForTags">
        <div class="searchComponent">
            <input class="searchbar" type="text" placeholder="Search" />
            <button class="searchbutton" type="button">
                <span>
                    <i class="fa-solid fa-magnifying-glass searchIcon"></i>
                </span>
            </button>
        </div>
        <div class="tags">
            <span class="badge bg-secondary rounded-pill tag">Blazor</span>
            <span class="badge bg-secondary rounded-pill tag">React</span>
            <span class="badge bg-secondary rounded-pill tag">Flutter</span>
